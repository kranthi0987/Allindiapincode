<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sanjay.allindiapincode.MainActivity">


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editext"
        android:layout_alignBottom="@+id/editext"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="pincode"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="64dp" />

    <EditText
        android:id="@+id/editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Enter text"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="64dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editext"
        android:layout_alignStart="@+id/editext"
        android:layout_below="@+id/switch1"
        android:layout_marginTop="82dp"
        android:text="@string/search"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="147dp" />
</RelativeLayout>
